rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to donations collection for displaying money counter and donor wall
    match /donations/{document} {
      allow read: if true;
      // Allow create operations (from client-side for donations)
      allow create: if true;
      // Deny update and delete operations to prevent tampering
      allow update, delete: if false;
    }
  }
}