rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /donations/{document} {
      allow read: if true;
      allow create: if true;
      // Allow update only if status is changing from pending to confirmed/failed
      // and only specific fields (status, invoiceId, message) are being updated
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['status', 'invoiceId', 'message'])
        && resource.data.status == 'pending'
        && (request.resource.data.status == 'confirmed' || request.resource.data.status == 'failed');
      allow delete: if false;
    }
  }
}