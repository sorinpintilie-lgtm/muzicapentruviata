rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to donations collection for displaying money counter and donor wall
    match /donations/{document} {
      allow read: if true;
      // Allow create operations (writes are handled by Netlify functions)
      allow create: if true;
      // Deny update and delete operations from client-side
      allow update, delete: if false;
    }
  }
}