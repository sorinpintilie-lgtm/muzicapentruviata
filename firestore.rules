rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to donations collection for displaying money counter and donor wall
    match /donations/{document} {
      allow read: if true;
      // Allow create operations (from client-side for pending donations and server-side for confirmations)
      allow create: if true;
      // Allow update operations for status changes (pending -> confirmed)
      allow update: if request.auth == null && request.resource.data.diff(resource.data).affectedKeys() == ['status'].toSet() && request.resource.data.status == 'confirmed';
      // Deny delete operations to prevent tampering
      allow delete: if false;
    }
  }
}